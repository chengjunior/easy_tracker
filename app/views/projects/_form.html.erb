 <%= simple_form_for resource do |f| %>
    <div class="modal-body">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <button class="btn" data-dismiss="modal" aria-hidden="true"><%= t('close') %></button>
    </div>
  <% end %>
